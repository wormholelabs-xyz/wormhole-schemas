{
  "about": "Token Bridge transfer (payload ID 1)",
  "fields": [
    {"name": "payload-id",     "const": "01"},
    {"name": "amount",         "type": "u256be", "help": "transfer amount (truncated to 8 decimals)"},
    {"name": "token-address",  "type": "address"},
    {"name": "token-chain",    "type": "u16be"},
    {"name": "to",             "type": "address"},
    {"name": "to-chain",       "type": "u16be"},
    {"name": "fee",            "type": "u256be", "help": "relayer fee (must be < amount)"}
  ]
}
